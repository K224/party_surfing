<div class="container" id="containerCen">
  <div class="raw">
    <div class="col-md-4 col-md-offset-4"><div id="centerBlock">
    <%= form_for(resource.with_profile, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <h2>Sign up</h2>

        <%= devise_error_messages! %>

        <div class="form-group" >
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control"%>
        </div>
        <br>

        <div class="form-group" >
          <%= f.label :password %> 
          <% if @validatable %>
            <i>(<%= @minimum_password_length %> char. min.)</i>
          <% end %>
          <br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
        <br>

        <div class="form-group" >
          <%= f.label :password_confirmation %>
          <br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
        <br>

    <%= f.fields_for :profile do |f1| %>

        <div class="form-group" >
          <%= f1.label :name %>
          <br/>
          <%= f1.text_field :name, class: "form-control" %>

    </div>

        <br>
        <div class="form-group" >
          <%= f1.label :surname %>
          <br/>
          <%= f1.text_field :surname, class: "form-control" %>
        </div>
        <br>

        <div class="form-group" >
          <%= f1.label :birthday %>
          <br/>
          <%= f1.date_field :birthday, class: "form-control" %>
        </div>

    <% end %>
    <br>
        <div>
          <%= f.submit "Sign up", class: "btn btn-success" %>
        </div>
        <br/>

    <% end %>

          <%= render "devise/shared/links" %>
</div></div></div></div>

