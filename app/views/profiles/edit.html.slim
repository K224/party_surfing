javascript:
  initNicEditor('profile_contacts')

.container
  = form_for @profile, :html => { :multipart => true } do |f|
    panel
      .panel-heading.backcolor1
        h1.textCenter Редактирование профиля
    .row
      .col-sm-3.col-lg-4
        div.ava
          img.avatar.img-responsive src=@profile.get_avatar(:medium)
        =link_to "Удалить PartySurfing аватар", erase_avatar_profile_path(current_user), class: "btn btn-style"
        =link_to "Удалить аватар из соцсети", erase_social_avatar_profile_path(current_user), class: "btn btn-style"
        label
          | Аватар
        = f.file_field :avatar
        /div.btn.btn-primary#editAva.margin10bot =link_to "Измнить аватар", edit_profile_path(current_user)
      .col-sm-8.col-sm-offset-1.col-lg-7.col-lg-offset-1
        div =flash[:errors]
        panel.panel1
          .panel-heading
            |Личная информация
          .panel-body
            .col-xs-6.col-md-5.col-lg-2
              label
                | Имя
            .col-xs-6.col-md-7.col-lg-4
              =f.text_field :name, class: "form-control"

            .col-xs-6.col-md-5.col-lg-2
              label
                | Фамилия
            .col-xs-6.col-md-7.col-lg-4
              =f.text_field :surname, class: "form-control"

            .col-xs-6.col-md-5.col-lg-2
              label
                | Дата рождения
            .col-xs-6.col-md-7.col-lg-4
              =f.date_field :birthday, class: "form-control"

        .row
          .col-lg-6
            panel.panel1
              .panel-heading
                |Личная информация
              .panel-body
                .col-xs-6.col-md-5
                  label
                    | Телефон
                .col-xs-6.col-md-7
                  =f.text_field :phone, class: "form-control"

                .col-xs-6.col-md-5
                  label
                    | Skype
                .col-xs-6.col-md-7
                  =f.text_field :skype, class: "form-control"

                .col-xs-6.col-md-5
                  label
                    | Vkontakte
                .col-xs-6.col-md-7
                  =f.text_field :vk, class: "form-control" 

                .col-xs-6.col-md-5
                  label
                    | Facebook
                .col-xs-6.col-md-7
                  =f.text_field :fb, class: "form-control" 
          .col-lg-6
            panel.panel1
              .panel-heading
                |Личная информация
              .panel-body
                =f.text_area :contacts, class: "form-control"
                =f.submit "Сохранить"

