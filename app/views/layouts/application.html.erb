<!DOCTYPE html>
<html>
<head>
  <title>PartySurfing</title>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places" %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-static-top navbar-inverse navbar-without-margin">
    <div class="container">
      <div class="navbar-header">
        <%=image_tag "logo.png", class:"img-responsive", alt:"Responsive image" %>
      </div>
      <div class="nav navbar-nav navbar-right">
        <%-if user_signed_in?%>
          <span>
            Здравствуйте, <%=current_user.profile.name%>
            <%=link_to "Профиль", current_user.profile, class: "btn btn-default navbar-btn btn-orange" %>
            <%=link_to "Выйти", destroy_user_session_path, class: "btn btn-default navbar-btn btn-black", method: :delete %>
          </span>
        <%-else%>
            <%=link_to "Вход", new_user_session_path, class:"btn btn-default navbar-btn btn-black"%>
            <%=link_to "Зарегистрироваться", new_user_registration_path, class:"btn btn-default navbar-btn btn-orange"%>
        <%-end%>
      </div>
    </div>
  </div>
  <%= yield %>
</body>
</html>
